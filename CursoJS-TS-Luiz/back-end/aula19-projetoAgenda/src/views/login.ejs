<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row justify-content-center text-center my-3">
                <div class="col-lg-8">
                    <h1>Criar conta ou Entrar</h1>
                    <p class="lead">Faça login ou crie sua conta abaixo</p>
                    <%- include('includes/messages') %>
                </div>
            </div>

            <!-- Centralização dos formulários -->
            <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
                <!-- Cadastro -->
                <div class="col-md-5 mb-4">
                    <h4>Faça seu cadastro</h4>
                    <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                    <form action="/login/register" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Seu email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Criar conta</button>
                    </form>
                </div>

                <!-- Login -->
                <div class="col-md-5 mb-4">
                    <h4>Faça seu login</h4>
                    <p>Se você já tem uma conta, faça um login abaixo:</p>
                    <form action="/login/login" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                            <label>Seu email</label>
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>
                </div>
            </div>
        </div>

        <%- include('includes/footer') %>